<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0B2B0B" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:startColor="#0D330D"
                android:endColor="#0B2B0B"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:startColor="#092b13"
                android:endColor="#00000000"
                android:centerX="0.0"
                android:centerY="0.0" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:startColor="#00C6A138"
                android:endColor="#00000000"
                android:centerX="1.0"
                android:centerY="1.0" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#00000000"
                android:centerColor="#0A0F3B00"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>